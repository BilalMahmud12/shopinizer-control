doctype html
html.h-full(lang="en", dir="ltr")
    head
        block head
            meta(charset="utf-8")
            meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")

            //start css
            link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons&display=swap")
            link(rel="stylesheet", href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css")
            link(rel="stylesheet", href="assets/css/app.min.css")
            //end css

            link(rel="shortcut icon", href="./assets/images/note.svg", type="image/x-icon")

            block meta
            
    body#app.flex.flex-col.h-full.antialiased.font-sans.text-base.font-normal.leading-normal.text-left.text-gray-800.bg-white
        main.flex.flex-row.h-full
            // start SideBar
            block sidebar
                include ../partials/sidebar
            // end SideBar

            block nestbar
        
            //start page content
            .flex.flex-col.flex-1.h-full.overflow-y-auto
                div.flex.flex-col.flex-1.py-6.px-8
                    block page
                
                // start Footer
                block footer
                    include ../partials/footer
                // end Footer
            //end page content

        // START JAVASCRIPTS
        block scripts
        script(src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.6.10/vue.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js")
        script(src="https://unpkg.com/@popperjs/core@2")
        script(src="https://unpkg.com/tippy.js@6")
        script(src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js")
        script(src="assets/javascripts/app.min.js")
        // END JAVASCRIPTS