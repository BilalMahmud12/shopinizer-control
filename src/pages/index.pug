                            button.py-1.px-4.mr-1.text-sm.font-medium.bg-transparent.rounded-full.cursor-pointer.fade(href="#" x-on:click="tab = 'recent'" x-bind:class="{ 'text-white bg-blue-500 hover_text-white': tab === 'recent', 'hover_text-blue-500': tab !== 'recent'}") Recent
