extends ../layouts/default

block meta
    title Dashboard | Shopinizer eCommerce

block nestbar
    aside.flex.flex-col.w-full.max-w-xxs.py-6.px-8.bg-gray-300
        h3.mb-6.text-2xl Marketing

        .flex.flex-col.mb-6
            nav.pl-0
                ul.flex.flex-col
                    li.mb-3
                        a.text-gray-700.hover_text-blue-500(href="./marketing-banners.html") Banners
                    li.mb-3
                        a.text-gray-700.hover_text-blue-500(href="./marketing-promotions.html") Promotions
                    li.mb-3
                        a.text-blue-600.hover_text-blue-600(href="./marketing-notifications.html") Abandoned Cart Notifications
                    li.mb-3
                        a.text-gray-700.hover_text-blue-500(href="./marketing-reviews.html") Google Customer Reviews
                    li.mb-3
                        a.text-gray-700.hover_text-blue-500(href="./marketing-coupons.html") Coupon Codes

        .flex.flex-col.mb-6
            nav.pl-0
                ul.flex.flex-col
                    li.mb-3
                        a.text-gray-700.hover_text-blue-500(href="./marketing-email.html") Email Marketing
                    li.mb-3
                        a.text-gray-700.hover_text-blue-500(href="./marketing-gifts.html") Gift Certificates
                    li.mb-3
                        a.text-gray-700.hover_text-blue-500(href="./marketing-ebay.html") Sell on eBay


block page
    .flex.flex-col.px-12.py-4.bg-white.shadow-sm.z-50
        .flex.flex-row.items-center.justify-between.-ml-3
            .flex.flex-col
                nav.flex.flex-row.mb-1
                    a.flex.flex-row.items-center.text-gray-500.hover_text-blue-500.fade(href="./marketing-notifications.html")
                        span.material-icons.text-xl keyboard_backspace
                        span.ml-2.font-bold.text-xs.uppercase View Abandoned Cart Notifications
                h2.mb-2.text-3xl.font-light.leading-none Add Notification | Notification Name Here

            // Buttons control
            nav.flex.flex-row
                a.flex.flex-row.items-center.ml-4.text-blue-500.border.border-blue-500.rounded.hover_opacity-50.fade(href="#")
                    span.material-icons.py-1.px-2.text-md more_vert

    .flex.flex-col.flex-1.items-center.h-full.py-8.px-12.overflow-y-auto.bg-gray-200
        .mb-5.max-w-3xl.text-center
            h5.mb-1.text-xl.font-medium Edit An Email
            p.text-lg.font-normal.text-gray-700 Edit the details of the email in the form below. You can have up to 3 emails active at any one time.
        // start Form
        form.w-full.max-w-5xl(action="/upload" method="post" enctype="multipart/form-data" )
            .p-8.mb-8.bg-white.shadow.rounded
                h6.mb-6.text-2xl.font-normal.text-gray-700 Email Details

                .flex.flex-wrap.-mx-4
                    .w-full.px-4.mb-6
                        .w-full.md_w-1_2
                            label.block.mb-1.text-xs.font-bold.uppercase.tracking-wide From
                                span.mx-1.text-sm.text-red-600 *
                            input.block.w-full.py-3.px-4.appearance-none.leading-tight.text-blue-900.bg-white.border.border-gray-500.bg-gray-200.shadow-xs.rounded.fade.focus_outline-none.focus_border-blue-500(type="text", placeholder="", value="testoria <info@testoria.mybigcommerce.com>", disabled)
                        
                    .w-full.px-4.mb-6
                        .w-full.md_w-1_2
                            label.block.mb-1.text-xs.font-bold.uppercase.tracking-wide Subject
                                span.mx-1.text-sm.text-red-600 *
                            input.block.w-full.py-3.px-4.appearance-none.leading-tight.text-blue-900.bg-white.border.border-gray-500.shadow-xs.rounded.fade.focus_outline-none.focus_border-blue-500(type="text", placeholder="", value="Complete your purchase at %%STORENAME%%...")
                        
                    .w-full.px-4.mb-6
                        .relative
                            label.block.mb-1.text-xs.font-bold.uppercase.tracking-wide Message
                            .editor
                                p Hello World!
                                p Some initial
                                    strong bold
                                    | text
                            p.mt-1.text-sm.text-gray-700 Please note: An unsubscribe link will be added automatically to all abandoned cart emails. 
                        
                    .w-full.px-4.mb-6
                        .w-full.md_w-1_2
                            label.block.mb-1.text-xs.font-bold.uppercase.tracking-wide Coupon Code
                            .relative
                                select.block.w-full.py-3.px-4.pr-10.appearance-none.leading-tight.text-blue-900.bg-white.border.border-gray-500.shadow-xs.rounded.fade.focus_outline-none.focus_border-blue-500
                                    option Option 1
                                    option Option 2
                                    option Option 3
                                .absolute.pointer-events-none.inset-y-0.right-0.flex.items-center.pt-1.px-3.text-gray-700
                                    svg.fill-current.w-5.h-5(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20')
                                        path(d='M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z')  

                    .w-full.px-4.mb-6
                        label.block.mb-1.text-xs.font-bold.uppercase.tracking-wide Active?
                        label.inline-flex.items-center
                            input.form-checkbox.h-6.w-6.text-blue-500(type="checkbox")
                            span.ml-2 Yes, this email should be sent to shoppers with abandoned carts


                    .w-full.md_w-12_12.flex.flex-wrap.items-center
                        .w-full.md_w-12_12.px-4
                            p.block.mb-1.text-xs.font-bold.uppercase.tracking-wide Send This Email 

                        .w-full.md_w-2_12.px-4.mb-6
                            .relative
                                select.block.w-full.py-3.px-4.pr-10.appearance-none.leading-tight.text-blue-900.bg-white.border.border-gray-500.shadow-xs.rounded.fade.focus_outline-none.focus_border-blue-500
                                    option Option 1
                                    option Option 2
                                    option Option 3
                                .absolute.pointer-events-none.inset-y-0.right-0.flex.items-center.pt-1.px-3.text-gray-700
                                    svg.fill-current.w-5.h-5(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20')
                                        path(d='M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z') 
                        
                        .w-full.md_w-3_12.px-4.mb-6
                            .relative
                                select.block.w-full.py-3.px-4.pr-10.appearance-none.leading-tight.text-blue-900.bg-white.border.border-gray-500.shadow-xs.rounded.fade.focus_outline-none.focus_border-blue-500
                                    option Option 1
                                    option Option 2
                                    option Option 3
                                .absolute.pointer-events-none.inset-y-0.right-0.flex.items-center.pt-1.px-3.text-gray-700
                                    svg.fill-current.w-5.h-5(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20')
                                        path(d='M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z')   

                        .w-full.md_w-4_12.px-4.mb-6
                            p.text-gray-700 after the cart is abandoned
                            
        // end Form
                    
block footer
    .flex.flex-row.justify-end.items-center.px-12.py-4.bg-white.border-t.border-gray-200.z-50
        nav.flex.flex-row
            button.flex.flex-row.items-center.ml-4.text-gray-700.rounded.outline-none.hover_opacity-75.fade(type="button")
                span.py-1.text-sm.font-medium.tracking-widest.uppercase Cancel
            button.flex.flex-row.items-center.ml-4.text-blue-500.bg-white.border.border-blue-500.outline-none.rounded.hover_opacity-75.fade(type="button")
                span.py-1.px-5.text-sm.font-bold.tracking-widest.uppercase Save&Exit
            button.flex.flex-row.items-center.ml-4.text-white.bg-blue-500.border.border-transparent.outline-none.rounded.hover_opacity-75.fade(type="button")
                span.py-1.px-5.text-sm.font-bold.tracking-widest.uppercase Save&Keep Editing
            button.flex.flex-row.items-center.ml-4.text-white.bg-red-700.border.border-transparent.outline-none.rounded.hover_opacity-75.fade(type="button")
                span.material-icons.py-1.px-2.bg-red-800.text-md.rounded delete