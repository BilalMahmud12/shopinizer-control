extends ../layouts/default

block meta
    title Store | Shopinizer eCommerce

block nestbar
    aside.flex.flex-col.w-full.max-w-xxs.py-6.px-8.bg-gray-300
        h3.mb-6.text-2xl Store Setup

        nav.flex.flex-col.mb-6
            ul.flex.flex-col
                li.mb-3
                    a.text-gray-700.hover_text-blue-500(href="./store-profile.html") Store Profile
                li.mb-3
                    a.text-blue-600.hover_text-blue-600(href="./store-currencies.html") Currencies
                li.mb-3
                    a.text-gray-700.hover_text-blue-500(href="./store-payments.html") Payments
                li.mb-3
                    a.text-gray-700.hover_text-blue-500(href="./store-settings.html") Store Settings
                li.mb-3
                    a.text-gray-700.hover_text-blue-500(href="./store-shipping.html") Shipping
                li.mb-3
                    a.text-gray-700.hover_text-blue-500(href="./store-tax.html") Tax
                li.mb-3
                    a.text-gray-700.hover_text-blue-500(href="./store-points.html") Point of Sale
                li.mb-3
                    a.text-gray-700.hover_text-blue-500(href="./store-accounting.html") Accounting

block page
    .flex.flex-col.px-12.py-4.bg-white.shadow-sm.z-50
        .flex.flex-row.items-center.justify-between.-ml-3
            .flex.flex-col
                nav.flex.flex-row.mb-1
                    a.flex.flex-row.items-center.text-gray-500.hover_text-blue-500.fade(href="./product-options.html")
                        span.material-icons.text-xl keyboard_backspace
                        span.ml-2.font-bold.text-xs.uppercase View Currencies
                h2.mb-2.text-3xl.font-light.leading-none Add|Edit Currency Name

            // Buttons control
            nav.flex.flex-row
                a.flex.flex-row.items-center.ml-4.text-blue-500.border.border-blue-500.rounded.hover_opacity-50.fade(href="#")
                    span.material-icons.py-1.px-2.text-md more_vert


    .flex.flex-col.flex-1.items-center.h-full.py-8.px-12.overflow-y-auto.bg-gray-200
        // start Form
        form.w-full.max-w-5xl(action="/upload" method="post" enctype="multipart/form-data" )

            .p-8.mb-8.bg-white.shadow.rounded
                h6.mb-1.text-2xl.font-normal.text-gray-700 Currency display configurations
                p.mb-6.font-normal.text-gray-700 Configure how the currency is presented to your customers.
                
                .flex.flex-wrap.-mx-4
                    .flex.flex-wrap.w-full.px-4.mb-6
                        .md_w-1_2
                            label.block.mb-1.text-xs.font-bold.uppercase.tracking-wide Display name
                            input.block.w-full.py-3.px-4.appearance-none.leading-tight.text-blue-900.bg-white.border.border-gray-500.shadow-xs.rounded.fade.focus_outline-none.focus_border-blue-500(type="text")
              

            .p-8.mb-8.bg-white.shadow.rounded
                h6.mb-1.text-2xl.font-normal.text-gray-700 Currency display
                p.mb-6.font-normal.text-gray-700 Customize how your currency displays.
                
                .flex.flex-wrap.-mx-4
                    .w-full.md_w-1_2.px-4.mb-6
                        label.block.mb-1.text-xs.font-bold.uppercase.tracking-wide Symbol
                        input.block.w-full.py-3.px-4.appearance-none.leading-tight.text-blue-900.bg-white.border.border-gray-500.shadow-xs.rounded.fade.focus_outline-none.focus_border-blue-500(type="text")
                                
                    .w-full.md_w-1_2.px-4.mb-6
                        label.block.mb-1.text-xs.font-bold.uppercase.tracking-wide Symbol placement
                        .relative
                            select#select-15.block.w-full.py-3.px-4.pr-10.appearance-none.leading-tight.text-blue-900.bg-white.border.border-gray-500.shadow-xs.rounded.fade.focus_outline-none.focus_border-blue-500
                                option Left
                                option Right
                            .absolute.pointer-events-none.inset-y-0.right-0.flex.items-center.pt-1.px-3.text-gray-700
                                svg.fill-current.w-5.h-5(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20')
                                    path(d='M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z')
                                                     
                    .w-full.md_w-1_2.px-4.mb-6
                        label.block.mb-1.text-xs.font-bold.uppercase.tracking-wide Decimal token
                        input.block.w-full.py-3.px-4.appearance-none.leading-tight.text-blue-900.bg-white.border.border-gray-500.shadow-xs.rounded.fade.focus_outline-none.focus_border-blue-500(type="text",  value=".")
                                                                              
                    .w-full.md_w-1_2.px-4.mb-6
                        label.block.mb-1.text-xs.font-bold.uppercase.tracking-wide Thousand token
                        input.block.w-full.py-3.px-4.appearance-none.leading-tight.text-blue-900.bg-white.border.border-gray-500.shadow-xs.rounded.fade.focus_outline-none.focus_border-blue-500(type="text",  value=",")
                                                                      
                    .w-full.md_w-1_2.px-4.mb-6
                        label.block.mb-1.text-xs.font-bold.uppercase.tracking-wide Decimal places
                        .relative
                            select#select-15.block.w-full.py-3.px-4.pr-10.appearance-none.leading-tight.text-blue-900.bg-white.border.border-gray-500.shadow-xs.rounded.fade.focus_outline-none.focus_border-blue-500
                                option 1
                                option(selected) 2
                                option 3
                                option 4
                                option 5
                                option 6
                            .absolute.pointer-events-none.inset-y-0.right-0.flex.items-center.pt-1.px-3.text-gray-700
                                svg.fill-current.w-5.h-5(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 20 20')
                                    path(d='M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z')
                                
        // end Form
                    
block footer
    .flex.flex-row.justify-end.items-center.px-12.py-4.bg-white.border-t.border-gray-200.z-50
        nav.flex.flex-row
            button.flex.flex-row.items-center.ml-4.text-gray-700.rounded.outline-none.hover_opacity-75.fade(type="button")
                span.py-1.text-sm.font-medium.tracking-widest.uppercase Cancel
            button.flex.flex-row.items-center.ml-4.text-white.bg-blue-500.border.border-transparent.outline-none.rounded.hover_opacity-75.fade(type="button")
                span.py-1.px-5.text-sm.font-bold.tracking-widest.uppercase Save
