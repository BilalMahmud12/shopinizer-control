        .flex.flex-col.mb-6
            h4.mb-3.text-md Products
            nav.pl-3
                ul.flex.flex-col
                    li.mb-3
                        a.text-gray-600.hover_text-indigo-700(href="./products.html") View
                    li.mb-3
                        a.text-gray-800.hover_text-indigo-800(href="./product-single.html") Add
                    li.mb-3
                        a.text-gray-600.hover_text-indigo-700(href="./product-import.html") Import
                    li.mb-3
                        a.text-gray-600.hover_text-indigo-700(href="./product-export.html") Export

        .flex.flex-col.mb-6
            h3.mb-3.text-md Product Definitions
            nav.pl-3
                ul.flex.flex-col
                    li.mb-3
                        a.text-gray-600.hover_text-indigo-700(href="./product-brands.html") Brands
                    li.mb-3
                        a.text-gray-600.hover_text-indigo-700(href="./product-categories.html") Product Categories
                    li.mb-3
                        a.text-gray-600.hover_text-indigo-700(href="./product-attributes.html") Product Attributes
                    li.mb-3
                        a.text-gray-600.hover_text-indigo-700(href="./product-options.html") Product Options
                    li.mb-3
                        a.text-gray-600.hover_text-indigo-700(href="./product-filters.html") Product Filters
                    li.mb-3
