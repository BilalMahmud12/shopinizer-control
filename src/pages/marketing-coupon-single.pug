block page
    .flex.flex-col.px-12.py-4.bg-white.shadow-sm.z-50
        .flex.flex-row.items-center.justify-between.-ml-3
            .flex.flex-col
                nav.flex.flex-row.mb-1
                    a.flex.flex-row.items-center.text-gray-500.hover_text-indigo-700.fade(href="./marketing-coupons.html")
                        span.material-icons.text-xl keyboard_backspace
                        span.ml-2.font-bold.text-xs.uppercase View Coupon Codes
                h2.mb-2.text-3xl.font-light.leading-none Add Coupon Code | Coupon Code Here

            // Buttons control
            nav.flex.flex-row
                a.flex.flex-row.items-center.ml-4.text-indigo-700.border.border-indigo-700.rounded.hover_opacity-50.fade(href="#")
                    span.material-icons.py-1.px-2.text-md more_vert

    .flex.flex-col.flex-1.items-center.h-full.py-8.px-12.overflow-y-auto.bg-gray-100
        .mb-5.max-w-3xl.text-center
            h5.mb-1.text-xl.font-medium Create a Coupon Code
            p.text-lg.font-normal.text-gray-600 Coupon codes allow you to provide customers with discounts on products available for purchase from your store. Fill out the form below to create a unique coupon code.
        
        // start Form
        form.w-full.max-w-5xl(action="/upload" method="post" enctype="multipart/form-data" )
            .p-8.mb-8.bg-white.shadow.rounded
                h6.mb-6.text-2xl.font-normal.text-gray-600 Coupon Details

                .flex.flex-wrap.-mx-4
                    .w-full.px-4.mb-6
                        .w-full.md_w-1_2
                            label.block.mb-2.text-xs.font-bold.uppercase.tracking-wide Coupon Code
                            input.block.w-full.py-3.px-4.appearance-none.leading-tight.text-indigo-900.bg-white.border.border-gray-300.shadow-xs.rounded.fade.focus_outline-none.focus_border-indigo-300(type="text", placeholder="")
                        
                    .w-full.px-4.mb-6
                        .w-full.md_w-1_2
                            label.block.mb-2.text-xs.font-bold.uppercase.tracking-wide Coupon Name
                            input.block.w-full.py-3.px-4.appearance-none.leading-tight.text-indigo-900.bg-white.border.border-gray-300.shadow-xs.rounded.fade.focus_outline-none.focus_border-indigo-300(type="text", placeholder="")
 
                    .w-full.px-4.mb-6
                        .w-full.md_w-1_2
                            label.block.mb-2.text-xs.font-bold.uppercase.tracking-wide Discount Type
                            .mb-2
                                label.inline-flex.items-center
                                    input.form-radio.h-6.w-6.text-indigo-700(type="radio", name="discount_type_switch", v-model="discount_type_switch", value="1")
                                    span.ml-2 Dollar amount off the order total
                            .mb-2
                                label.inline-flex.items-center
                                    input.form-radio.h-6.w-6.text-indigo-700(type="radio", name="discount_type_switch", v-model="discount_type_switch", value="2")
                                    span.ml-2 Dollar amount off each item in the order
                            .mb-2
                                label.inline-flex.items-center
                                    input.form-radio.h-6.w-6.text-indigo-700(type="radio", name="discount_type_switch", v-model="discount_type_switch", value="3")
                                    span.ml-2 Percentage off each item in the order
                            .mb-2
                                label.inline-flex.items-center
                                    input.form-radio.h-6.w-6.text-indigo-700(type="radio", name="discount_type_switch", v-model="discount_type_switch", value="4")
                                    span.ml-2 Dollar amount off the shipping total
                            .mb-2
                                label.inline-flex.items-center
                                    input.form-radio.h-6.w-6.text-indigo-700(type="radio", name="discount_type_switch", v-model="discount_type_switch", value="5")
                                    span.ml-2 Free shipping

                    .w-full.px-4.mb-6
                        .w-full.md_w-1_2
                            label.block.mb-0.text-xs.font-bold.uppercase.tracking-wide Discount Amount
                            p.mb-2.text-sm.text-gray-600 off the order total
                            .relative
                                input.block.w-full.py-3.px-4.pl-16.appearance-none.leading-tight.text-indigo-900.bg-white.border.border-gray-300.shadow-xs.rounded.fade.focus_outline-none.focus_border-indigo-300(type="number", placeholder="0.00")
                                .absolute.pointer-events-none.inset-y-0.left-0.flex.items-center.px-4.text-gray-600 USD

                    .w-full.px-4.mb-6
                        .w-full.md_w-1_2
                            label.block.mb-0.text-xs.font-bold.uppercase.tracking-wide Minimum Purchase
                            p.mb-2.text-sm.text-gray-600 (optional)
                            .relative
                                input.block.w-full.py-3.px-4.pl-16.appearance-none.leading-tight.text-indigo-900.bg-white.border.border-gray-300.shadow-xs.rounded.fade.focus_outline-none.focus_border-indigo-300(type="number", placeholder="0.00")
                                .absolute.pointer-events-none.inset-y-0.left-0.flex.items-center.px-4.text-gray-600 USD

                    .w-full.px-4.mb-6
                        label.block.mb-2.text-xs.font-bold.uppercase.tracking-wide Number of Uses
                        .mb-2
                            label.inline-flex.items-center
                                input.form-checkbox.h-6.w-6.text-indigo-700(type="checkbox")
                                span.ml-2 Limit total number of uses
                        .mb-2
                            label.inline-flex.items-center
                                input.form-checkbox.h-6.w-6.text-indigo-700(type="checkbox")
                                span.ml-2 Limit number of uses per customer

                    .w-full.px-4.mb-6
                        label.block.mb-2.text-xs.font-bold.uppercase.tracking-wide Exclude Cart Level Discounts
                        .mb-2
                            label.inline-flex.items-center
                                input.form-checkbox.h-6.w-6.text-indigo-700(type="checkbox")
                                span.ml-2 Yes, make sure this coupon does not apply on top of cart level discounts

                    .w-full.px-4.mb-6
                        label.block.mb-2.text-xs.font-bold.uppercase.tracking-wide Enabled
                        .mb-2
                            label.inline-flex.items-center
                                input.form-checkbox.h-6.w-6.text-indigo-700(type="checkbox")
                                span.ml-2 Yes, this coupon code is enabled and can be used.

                    .w-full.px-4.mb-6
                        .w-full.md_w-1_2
                            label.block.mb-0.text-xs.font-bold.uppercase.tracking-wide Expiry Date
                            p.mb-2.text-sm.text-gray-600 (optional)
                            vuejs-datepicker(placeholder="D MMM YYYY" input-class="block w-full py-3 px-4 appearance-none leading-tight text-indigo-900 bg-white border border-gray-300 shadow-xs rounded fade focus_outline-none focus_border-indigo-300")

            .p-8.mb-8.bg-white.shadow.rounded
                h6.mb-6.text-2xl.font-normal.text-gray-600 Coupon Conditions 

                .flex.flex-wrap.-mx-4
                    .w-full.px-4.mb-2
                        label.block.mb-2.text-xs.font-bold.uppercase.tracking-wide Applies To
                        label.inline-flex.items-center
                            input.form-radio.h-6.w-6.text-indigo-700(type="radio", name="coupon_conditions_switch", v-model="coupon_conditions_switch", value="1")
                            span.ml-2 This coupon code can be used with these categories:

                    .w-full.px-4.mt-2.mb-4(v-if="coupon_conditions_switch == 1")
                        .w-full.md_w-1_2
                            treeselect(
                                v-model="treeselect_value",
                                v-bind:multiple="true",
                                v-bind:clearable="true",
                                v-bind:searchable="true",
                                v-bind:options="treeselect_options")

                    .w-full.px-4.mb-4
                        label.inline-flex.items-center
                            input.form-radio.h-6.w-6.text-indigo-700(type="radio", name="coupon_conditions_switch", v-model="coupon_conditions_switch", value="2")
                            span.ml-2 This coupon code will be applied if any of the following products are added to the cart:
                        
                    .flex.flex-wrap.px-4.-mx-4(v-if="coupon_conditions_switch == 2")
                        .w-full.px-4.mb-6
                                label.block.mb-2.text-xs.font-bold.uppercase.tracking-wide(for="Weight") Categories
                                    span.mx-1.text-sm.text-red-600 *
                                treeselect(
                                    v-model="treeselect_value",
                                    v-bind:multiple="true",
                                    v-bind:clearable="true",
                                    v-bind:searchable="true",
                                    v-bind:options="treeselect_options")

                        .w-full.px-4.mb-6(v-if="coupon_conditions_switch == 2")
                            label.block.mb-2.text-xs.font-bold.uppercase.tracking-wide Add Related Products
                            table.dataTable.no-footer.dtr-inline.display
                                thead
                                    tr
                                        th.py-2.text-xs.font-bold.uppercase Image
                                        th.py-2.text-xs.font-bold.uppercase Product SKU
                                        th.py-2.text-xs.font-bold.uppercase Stock Level
                                        th.py-2.text-xs.font-bold.uppercase(style="width: 40%;") Product Name
                                        th.py-2.text-xs.font-bold.uppercase Price
                                        th.no-sort.py-2.text-xs.font-bold.uppercase.text-right(style="width: 6%;")
                                tbody
                                    tr
                                        td
                                            img.w-12.h-12(src="https://cdn11.bigcommerce.com/s-5pt0ejunjr/products/111/images/371/smithjournal1.1435956911.100.100.jpg?c=1" alt="")
                                        td SM13
                                        td N/A
                                        td [Sample] Smith Journal 13
                                        td USD 25.00
                                        td
                                            nav.flex.flex-row.items-center.justify-end
                                                button.ml-2.fade.text-gray-500.hover_text-indigo-700.mt-2(type="button" data-tippy-content="More")
                                                    span.material-icons add
                                    tr
                                        td
                                            img.w-12.h-12(src="https://cdn11.bigcommerce.com/s-5pt0ejunjr/products/111/images/371/smithjournal1.1435956911.100.100.jpg?c=1" alt="")
                                        td SM14
                                        td N/A
                                        td [Sample] Smith Journal 14
                                        td USD 25.00
                                        td
                                            nav.flex.flex-row.items-center.justify-end
                                                button.ml-2.fade.text-gray-500.hover_text-indigo-700.mt-2(type="button" data-tippy-content="More")
                                                    span.material-icons add

                        .w-full.px-4.mb-6
                            label.block.mb-2.text-xs.font-bold.uppercase.tracking-wide Related Products
                            table.dataTable.no-footer.dtr-inline.display
                                thead
                                    tr
                                        th.py-2.text-xs.font-bold.uppercase Image
                                        th.py-2.text-xs.font-bold.uppercase Product SKU
                                        th.py-2.text-xs.font-bold.uppercase Stock Level
                                        th.py-2.text-xs.font-bold.uppercase(style="width: 40%;") Product Name
                                        th.py-2.text-xs.font-bold.uppercase Price
                                        th.no-sort.py-2.text-xs.font-bold.uppercase.text-right(style="width: 6%;")
                                tbody
                                    tr
                                        td
                                            img.w-12.h-12(src="https://cdn11.bigcommerce.com/s-5pt0ejunjr/products/111/images/371/smithjournal1.1435956911.100.100.jpg?c=1" alt="")
                                        td SM13
                                        td N/A
                                        td [Sample] Smith Journal 13
                                        td USD 25.00
                                        td
                                            nav.flex.flex-row.items-center.justify-end
                                                button.ml-2.fade.text-red-500.hover_text-indigo-700.mt-2(type="button" data-tippy-content="More")
                                                    span.material-icons close
                          
        // end Form
                    
block footer
    .flex.flex-row.justify-end.items-center.px-12.py-4.bg-white.border-t.border-gray-200.z-50
        nav.flex.flex-row
            button.flex.flex-row.items-center.ml-4.text-gray-600.rounded.outline-none.hover_opacity-75.fade(type="button")
                span.py-1.text-sm.font-medium.tracking-widest.uppercase Cancel
            button.flex.flex-row.items-center.ml-4.text-indigo-700.bg-white.border.border-indigo-700.outline-none.rounded.hover_opacity-75.fade(type="button")
                span.py-1.px-5.text-sm.font-bold.tracking-widest.uppercase Save&Exit
            button.flex.flex-row.items-center.ml-4.text-white.bg-indigo-700.border.border-transparent.outline-none.rounded.hover_opacity-75.fade(type="button")
                span.py-1.px-5.text-sm.font-bold.tracking-widest.uppercase Save&Keep Editing
            button.flex.flex-row.items-center.ml-4.text-white.bg-red-700.border.border-transparent.outline-none.rounded.hover_opacity-75.fade(type="button")
                span.material-icons.py-1.px-2.bg-red-800.text-md.rounded delete
